// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"  
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  email         String     @unique
  password      String
  name          String?
  categories    Category[] @relation("UserCategories")
  expenses      Expense[]  @relation("UserExpenses")
}

model Category {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  name          String
  description   String
  color         String
  userId        String     @db.ObjectId
  user          User       @relation("UserCategories", fields: [userId], references: [id])
  expenseIds    String[] @db.ObjectId
  expenses      Expense[]  @relation("CategoryExpenses")
}

model Expense {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  name          String
  description   String?
  value         Float
  startDate     DateTime
  endDate       DateTime
  categoryId    String @db.ObjectId
  category      Category   @relation("CategoryExpenses", fields: [categoryId], references: [id])
  userId        String @db.ObjectId
  user          User       @relation("UserExpenses", fields: [userId], references: [id])
}
